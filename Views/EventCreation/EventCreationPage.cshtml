<!--A Simple form that posts all of the data to the event submit page-->
<div class="InfoForm">
    <form method="post" asp-controller="EventSubmit" asp-action="EventSubmitPage">
        <label>Event Name</label>
        <br />
        <input type="text" placaeholder="Event Name" name="userEventName" required/>
        <br />
        <label>Event Description</label>
        <br />
        <textarea name="userDescription" required></textarea>
        <br />
        <label>Event Date and Time</label>
        <br /> 
        <input type="datetime-local" name="userDateTime" required/>
        <br />
        <label>Add an Image Displaying the Event Venu if you Want!</label>
        <br />
        <input type="file" name="userPicture" accept="image/jpeg, image/png" multiple />
        <br />
        <label>Street Address</label>
        <br />
        <input type="text" name="userAddress" required />
        <br />
        <label>City</label>
        <br />
        <input type="text" name="userCity" required />
        <br />
        <label>Zip Code</label>
        <br>
        <input type="number" name="userZipCode" required />
        <br />
        <input type="submit" value="Submit" />
    </form>
</div>



